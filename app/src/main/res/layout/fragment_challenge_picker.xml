<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:theme="@style/AppTheme.ChallengeSelectionView"
    android:background="@color/colorSecondaryLight">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/story_text_margin"
        android:theme="@style/AppTheme.Light">

        <TextView
            android:id="@+id/text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:theme="@style/AppTheme.ChallengeSelectionView.heading"/>

        <TextView
            android:id="@+id/subtext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:theme="@style/AppTheme.ChallengeSelectionView.subheading"
            android:paddingBottom="@dimen/story_text_margin" />

        <RadioGroup
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/challengesRadioGroup">

            <RadioButton
                android:id="@+id/challenge1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:buttonTint="@color/colorAccentDark"
                android:paddingBottom="@dimen/story_text_submargin"
                android:paddingTop="@dimen/story_text_submargin"
                android:text="Walk at least 3000 steps every day. It\'s like walking around the Boston Common once." />

            <RadioButton
                android:id="@+id/challenge2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:buttonTint="@color/colorAccentDark"
                android:paddingBottom="@dimen/story_text_submargin"
                android:paddingTop="@dimen/story_text_submargin"
                android:text="Walk at least 6000 steps every day. It\'s like walking around the Boston Common twice." />

            <RadioButton
                android:id="@+id/challenge3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:buttonTint="@color/colorAccentDark"
                android:paddingBottom="@dimen/story_text_submargin"
                android:paddingTop="@dimen/story_text_submargin"
                android:text="Walk at least 9000 steps every day. It\'s like walking around the Boston Common three times." />

        </RadioGroup>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:background="@color/colorSecondary"
        android:padding="@dimen/actionbar_padding"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true">

        <Button
            android:id="@+id/buttonNext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/challenge_steps_button_next"
            android:textColor="@color/colorAccentText"
            android:background="@color/colorAccent"
            android:textSize="14sp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />


    </RelativeLayout>


</RelativeLayout>