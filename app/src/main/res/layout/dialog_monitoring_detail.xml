<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:padding="@dimen/dialog_padding"
    android:background="@color/flying_sky">

    <FrameLayout
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:id="@+id/visualizationFrame">

        <ImageView
            android:layout_width="500dp"
            android:layout_height="150dp"
            app:srcCompat="@drawable/hero_girl_base"
            android:id="@+id/imageView" />

    </FrameLayout>

    <!--ProgressBar
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/imageView"
        android:id="@+id/progressBar" /-->

    <TextView
        android:id="@+id/text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/visualizationFrame"
        android:layout_alignParentStart="true"
        android:fontFamily="@font/montserrat_bold"
        android:text="@string/monitoring_detail_success_text"
        android:textAlignment="center"
        android:textColor="@color/colorAccentDark"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/subtext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text"
        android:fontFamily="@font/montserrat"
        android:text="@string/monitoring_detail_success_subtext"
        android:textAlignment="center"
        android:textColor="@color/colorAccentDark"
        android:textSize="14sp" />
</RelativeLayout>