<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/storymap_viewer_sheet"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/storymap_dark"
    android:orientation="vertical"
    app:behavior_hideable="true"
    app:behavior_peekHeight="@dimen/storymap_viewer_peek_height"
    app:layout_behavior="android.support.design.widget.BottomSheetBehavior">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/overview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/overviewText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:layout_marginEnd="0dp"
            android:fontFamily="@font/storywell_handwriting"
            android:gravity="start"
            android:text="Family Story - "
            android:textColor="@color/greyPrimaryDark"
            android:textStyle="bold"
            android:textSize="14sp"
            app:textAllCaps="true"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/posted_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginStart="0dp"
            android:fontFamily="@font/storywell_handwriting"
            android:gravity="start"
            android:text="1 hours ago"
            android:textColor="@color/greyPrimaryDark"
            android:textStyle="bold"
            android:textSize="14sp"
            app:textAllCaps="true"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@+id/overviewText"/>

        <ImageView
            android:id="@+id/caregiver_avatar"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_story_marker_large_high_match_highlight" />

        <TextView
            android:id="@+id/caregiver_nickname"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginStart="16dp"
            android:fontFamily="@font/storywell_handwriting"
            android:gravity="bottom"
            android:text="@string/storymap_viewer_username"
            android:textColor="@android:color/black"
            android:textSize="21sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/overviewText" />

        <LinearLayout
            android:id="@+id/family_info"
            android:layout_width="wrap_content"
            android:layout_height="22dp"
            android:layout_marginStart="16dp"
            app:layout_constraintTop_toBottomOf="@+id/caregiver_nickname"
            app:layout_constraintStart_toStartOf="parent">

            <TextView
                android:id="@+id/average_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/storywell_handwriting"
                android:gravity="start"
                android:text="Average "
                android:textColor="@android:color/black"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/average_steps"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/storywell_handwriting"
                android:gravity="start"
                android:text="4000"
                android:textColor="@android:color/black"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/steps_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/storywell_handwriting"
                android:gravity="start"
                android:text=" steps/day"
                android:textColor="@android:color/black"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/dash1_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/storywell_handwriting"
                android:gravity="start"
                android:text=" â€” "
                android:textColor="@android:color/black"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/neighborhood"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/storywell_handwriting"
                android:gravity="start"
                android:text="Dorchester"
                android:textColor="@android:color/black"
                android:textSize="18sp" />

        </LinearLayout>
    </android.support.constraint.ConstraintLayout>

    <View
        android:id="@+id/divider1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:background="@android:color/darker_gray"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/overview"/>

    <TextView
        android:id="@+id/user_bio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:fontFamily="@font/storywell_handwriting"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        android:text="I'm a mother of two children. I'm about 25 years old. My hobby is."
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/divider1"/>

    <Button
        android:id="@+id/button_play"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:paddingStart="0dp"
        android:paddingEnd="16dp"
        android:fontFamily="@font/storywell_handwriting"
        android:textSize="16sp"
        android:textStyle="bold"
        android:background="@drawable/rounded_primary_button"
        android:drawableLeft="@drawable/ic_round_play_arrow_big"
        android:text="Play Story"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/user_bio" />

    <Button
        android:id="@+id/button_response"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:fontFamily="@font/storywell_handwriting"
        android:textSize="16sp"
        android:textStyle="bold"
        android:background="@drawable/rounded_gray_button"
        android:text="Respond"
        app:layout_constraintStart_toEndOf="@+id/button_play"
        app:layout_constraintTop_toBottomOf="@+id/user_bio" />

    <View
        android:id="@+id/divider2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:background="@color/storymap_dark"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_play"/>
