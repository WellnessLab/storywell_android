<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/no_margin"
    android:theme="@style/AppTheme.ReflectionStart"
    android:background="@color/colorPrimary"
    android:layout_gravity="center"
    android:padding="@dimen/story_art_big_margin">

    <TextView
        android:id="@+id/refl_start_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/buttonReflectionStart"
        android:layout_centerHorizontal="true"
        android:text="@string/reflection_start_title"
        android:textColor="@color/colorPrimaryText"
        android:textStyle="bold"
        android:fontFamily="@font/storywell_handwriting"
        android:textSize="28sp"
        android:textAlignment="center"
        android:theme="@style/AppTheme.ReflectionStart.text" />

    <ImageView
        android:id="@+id/buttonReflectionStart"
        android:layout_width="360dp"
        android:layout_height="340dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        app:srcCompat="@mipmap/art_envelope_reflection" />

    <TextView
        android:id="@+id/refl_start_subtext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/buttonReflectionStart"
        android:layout_centerHorizontal="true"
        android:text="@string/reflection_start_subtitle"
        android:textColor="@color/colorPrimaryText"
        android:textStyle="normal"
        android:fontFamily="@font/storywell_handwriting"
        android:textSize="24sp"
        android:textAlignment="center"
        android:theme="@style/AppTheme.ReflectionStart.subtext" />

</RelativeLayout>