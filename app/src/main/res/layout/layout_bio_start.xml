<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorPrimary"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/bio_creation_instruction_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:fontFamily="@font/storywell_handwriting"
        android:text="Let's prepare your bio so that families using in this app can know you a little bit better."
        android:textColor="@color/colorPrimaryText"
        android:textSize="26sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <android.support.design.widget.TextInputLayout
        android:id="@+id/bio_nickname_edit_text_layout"
        style="@style/EditTextHint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:layout_constraintTop_toBottomOf="@+id/bio_creation_instruction_text">

        <EditText
            android:id="@+id/bio_nickname_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/storywell_handwriting"
            android:hint="Your name in the app"
            android:inputType="textCapSentences|text"
            android:maxLines="1"
            android:singleLine="true"
            android:textColor="@color/colorPrimaryText"
            android:textColorHighlight="@color/colorAccentDark"
            android:textColorHint="#ffffff" />

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/bio_age_edit_text_layout"
        style="@style/EditTextHint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:layout_constraintTop_toBottomOf="@+id/bio_nickname_edit_text_layout">

        <EditText
            android:id="@+id/bio_age_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/storywell_handwriting"
            android:hint="Age (an approximate is okay)"
            android:ems="10"
            android:inputType="number"
            android:maxLines="1"
            android:singleLine="true"
            android:textColor="@color/colorPrimaryText"
            android:textColorHighlight="@color/colorAccentDark"
            android:textColorHint="#ffffff"  />

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/bio_children_edit_text_layout"
        style="@style/EditTextHint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:layout_constraintTop_toBottomOf="@+id/bio_age_edit_text_layout">

        <EditText
            android:id="@+id/bio_children_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/storywell_handwriting"
            android:hint="How many kids do you have?"
            android:ems="10"
            android:inputType="number"
            android:maxLines="1"
            android:singleLine="true"
            android:textColor="@color/colorPrimaryText"
            android:textColorHighlight="@color/colorAccentDark"
            android:textColorHint="#ffffff"  />

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/bio_hobby_edit_text_layout"
        style="@style/EditTextHint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:layout_constraintTop_toBottomOf="@+id/bio_children_edit_text_layout">

        <EditText
            android:id="@+id/bio_hobby_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/storywell_handwriting"
            android:hint="Hobby"
            android:ems="10"
            android:inputType="text"
            android:maxLines="3"
            android:singleLine="true"
            android:textColor="@color/colorPrimaryText"
            android:textColorHighlight="@color/colorAccentDark"
            android:textColorHint="#ffffff"  />

    </android.support.design.widget.TextInputLayout>

    <Button
        android:id="@+id/make_bio_button"
        style="@style/AppTheme.ActionButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/firstrun_button_margin"
        android:layout_marginStart="@dimen/firstrun_button_margin"
        android:layout_marginEnd="@dimen/firstrun_button_margin"
        android:fontFamily="@font/storywell_handwriting"
        android:text="Make a bio for me"
        android:background="@drawable/rounded_primary_button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</android.support.constraint.ConstraintLayout>