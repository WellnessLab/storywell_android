<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_adventure"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/flying_sky"
    android:orientation="vertical"
    tools:context="edu.neu.ccs.wellness.storytelling.HomeActivity">

    <ViewFlipper
        android:id="@+id/view_flipper"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/actionbar_small_size">

        <include layout="@layout/fragment_adventure_gameview" />

        <include layout="@layout/fragment_adventure_calendar" />
    </ViewFlipper>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/actionbar_small_size"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center"
        android:background="@color/sea_foreground"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/control_play"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="top|center"
            android:orientation="vertical"
            android:paddingStart="@dimen/actionbar_small_padding"
            android:paddingEnd="@dimen/actionbar_small_padding">

            <!--Button
                android:id="@+id/button_prev"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:background="@color/flying_sky_blue"
                android:text="Previous"
                android:textColor="@color/black"/-->

            <Button
                android:id="@+id/button_play"
                android:layout_width="@dimen/actionbar_small_button_size"
                android:layout_height="@dimen/actionbar_small_button_size"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:background="@drawable/round_button_hot"
                android:fontFamily="@font/storywell_handwriting"
                android:text="@string/button_adventure_play"
                android:textColor="@color/black"
                android:textSize="14sp" />

            <!--Button
                android:id="@+id/button_next"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:background="@color/flying_sky_blue"
                android:text="Next"
                android:textColor="@color/black" /-->

            <LinearLayout
                android:id="@+id/button_go_prev"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/actionbar_button_size"
                android:orientation="vertical"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/text_play_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/storywell_handwriting"
                    android:text="Tap Play to see your family\'s progress in the adventure."
                    android:textColor="@color/black_semi"
                    android:textSize="18dp" />
                <TextView
                    android:id="@+id/text_play_info2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/storywell_handwriting"
                    android:text="For yesterday\'s fitness, tap here."
                    android:textColor="@color/black_semi"
                    android:textSize="14dp" />
            </LinearLayout>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/control_syncing"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="@dimen/actionbar_small_padding"
            android:visibility="invisible">

            <ProgressBar
                android:id="@+id/progressBar_syncing"
                style="?android:attr/progressBarStyle"
                android:layout_width="@dimen/actionbar_small_button_size"
                android:layout_height="@dimen/actionbar_small_button_size"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"/>

            <TextView
                android:id="@+id/text_syncing_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:fontFamily="@font/storywell_handwriting"
                android:text="Downloading fitness info \nfrom your band"
                android:textColor="@color/black_semi"
                android:textSize="18dp" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/control_ready"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="left"
            android:orientation="vertical"
            android:paddingStart="@dimen/actionbar_small_padding"
            android:paddingEnd="@dimen/actionbar_small_padding"
            android:visibility="gone">

            <TextView
                android:id="@+id/text_press_go"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:fontFamily="@font/storywell_handwriting"
                android:textColor="@color/black_semi"
                android:textSize="18dp"
                android:text="All set! Press go to see \nyour progress." />
            <Button
                android:id="@+id/button_go"
                android:layout_width="@dimen/actionbar_small_button_size"
                android:layout_height="@dimen/actionbar_small_button_size"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:background="@drawable/round_button_hot"
                android:text="Go"
                android:textColor="@color/black"
                android:textSize="14sp" />
        </RelativeLayout>

    </RelativeLayout>
</RelativeLayout>