<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorPrimary"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/bio_confirm_instruction_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:fontFamily="@font/storywell_handwriting"
        android:text="We created this bio for you. You can edit it before you save it."
        android:textColor="@color/colorPrimaryText"
        android:textSize="26sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <android.support.design.widget.TextInputLayout
        android:id="@+id/bio_final_edit_text_layout"
        style="@style/EditTextHint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:layout_constraintTop_toBottomOf="@+id/bio_confirm_instruction_text">

        <EditText
            android:id="@+id/bio_final_edit_text"
            android:layout_width="match_parent"
            android:layout_height="240sp"
            android:gravity="top|start"
            android:fontFamily="@font/storywell_handwriting"
            android:hint="Your bio"
            android:inputType="text|textMultiLine"
            android:maxLines="10"
            android:minLines="5"
            android:textColor="@color/colorPrimaryText"
            android:textColorHighlight="@color/colorAccentDark"
            android:textColorHint="#ffffff" />

    </android.support.design.widget.TextInputLayout>

    <Button
        android:id="@+id/save_bio_button"
        style="@style/AppTheme.ActionButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/firstrun_button_margin"
        android:layout_marginStart="@dimen/firstrun_button_margin"
        android:layout_marginEnd="@dimen/firstrun_button_margin"
        android:fontFamily="@font/storywell_handwriting"
        android:text="Save my bio"
        android:background="@drawable/rounded_primary_button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</android.support.constraint.ConstraintLayout>