<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/dialog_width"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dialog_art_height"
        android:background="@color/storyViewCoverBg"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/story_cover"
            android:layout_width="@dimen/dialog_art_height"
            android:layout_height="@dimen/dialog_art_height" />
        <TextView
            android:id="@+id/text_story_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/dialog_art_padding"
            android:gravity="bottom"
            android:fontFamily="@font/storywell_handwriting"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:text="Story Title"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/challenge_completion_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="@dimen/dialog_padding"
        android:layout_marginEnd="@dimen/dialog_padding"
        android:layout_marginBottom="@dimen/dialog_padding">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dialog_title_height"
            android:gravity="bottom"
            android:fontFamily="@font/storywell_handwriting"
            android:textStyle="bold"
            android:textSize="24sp"
            android:textColor="@color/black"
            android:text="@string/adventure_dialog_completed_title"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dialog_padding_smaller"
            android:fontFamily="@font/storywell_handwriting"
            android:textSize="20sp"
            android:textColor="@color/greyPrimaryDark"
            android:text="@string/adventure_dialog_completed_msg" />
    </LinearLayout>

</LinearLayout>