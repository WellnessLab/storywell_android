<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="24dp">

    <ImageView
        android:id="@+id/treasureIcon"
        android:layout_width="@dimen/story_art_size_size"
        android:layout_height="@dimen/story_art_size_size"
        android:src="@drawable/ic_gift_48" />

    <TextView
        android:id="@+id/treasureTitle"
        style="@style/AppTheme.StoryList.title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="@dimen/story_art_side_margin"
        android:text="TextView"
        android:textAlignment="viewStart"
        android:textColor="@color/white"
        android:textSize="22sp"
        android:textStyle="bold" />

</LinearLayout>