<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StoryMapFragment">

    <include layout="@layout/layout_storymap_map" />

    <include
        android:id="@+id/layout_storymap_viewer"
        android:elevation="10dp"
        layout="@layout/layout_storymap_viewer" />

    <LinearLayout
        android:id="@+id/storymap_banner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:visibility="gone">
        <TextView
            android:layout_margin="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/storywell_handwriting"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:text="Press Share Story to allow other families to listen to this story. Please make sure you are not sharing any private information." />
    </LinearLayout>

</android.support.design.widget.CoordinatorLayout>