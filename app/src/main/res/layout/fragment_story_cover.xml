<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/no_margin"
    android:theme="@style/AppTheme.StoryView"
    android:background="@color/storyViewBg"
    android:layout_gravity="center"
    android:padding="@dimen/story_art_margin">

    <FrameLayout
        android:id="@+id/storyImageFrame"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:background="@color/storyArtBg"
        android:scaleType="fitCenter">

        <ImageView
            android:id="@+id/storyImage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/story_art_margin"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:contentDescription="Page's artwork"
            app:srcCompat="@mipmap/story_cover_01" />
    </FrameLayout>

    <TextView
        android:id="@+id/text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/story_default_title"
        android:theme="@style/AppTheme.StoryView.title"
        android:layout_below="@+id/storyImageFrame"
        android:layout_marginTop="@dimen/story_art_margin"/>

</RelativeLayout>