<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.Login" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.Login.loginField" parent="AppTheme.Login">
        <item name="android:textColor">@color/colorPrimaryText</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:textColorHint">@color/colorPrimaryText</item>
    </style>

    <style name="AppTheme.Login.loginButton" parent="AppTheme.Login">
        <item name="android:background">@color/colorPrimaryLight</item>
        <item name="android:textColor">@color/colorPrimaryText</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- Storytelling App : Light -->
    <style name="AppTheme.Light" parent="AppTheme">
        <item name="android:textColor">@color/colorAccentDark</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="AppTheme.Light.heading" parent="AppTheme">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">36sp</item>
    </style>

    <style name="AppTheme.Light.subheading" parent="AppTheme">
        <item name="android:textColor">@color/greyPrimaryDark</item>
        <item name="android:textSize">24sp</item>
    </style>

    <!-- Storytelling App : ActionBar -->
    <style name="AppTheme.ActionBar" parent="AppTheme"></style>

    <style name="MyButton" parent="AppTheme.ActionBar">
        <item name="colorControlHighlight">@color/colorAccentLight</item>
    </style>

    <style name="AppTheme.ActionButton" parent="Theme.AppCompat">
        <item name="android:background">@color/colorSecondaryLight</item>
        <item name="android:textSize">@dimen/button_font_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="AppTheme.SecondaryButton" parent="Theme.AppCompat">
        <item name="android:background">@color/greyPrimaryLight</item>
        <item name="android:textSize">@dimen/button_font_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <!-- Storytelling App : SplashScreen -->
    <style name="AppTheme.SplashScreen" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <!-- Storytelling App : LoginView -->
    <style name="AppTheme.LoginView" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="AppTheme.LoginView.text" parent="AppTheme.LoginView">
        <item name="android:textColor">@color/colorSecondaryLight</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">24sp</item>
        <item name="android:layout_marginBottom">16dp</item>
    </style>

    <!-- Storytelling App : AboutActivity -->
    <style name="AppTheme.About" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.About.img" parent="AppTheme.About">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">180dp</item>
    </style>

    <style name="AppTheme.About.text" parent="AppTheme.About">
        <item name="android:textColor">@color/colorPrimaryText</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">14sp</item>
        <item name="android:paddingBottom">24sp</item>
    </style>

    <!-- Storytelling App : HomeView -->
    <style name="AppTheme.HomeView" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <!-- Storytelling App : StoryList -->
    <style name="AppTheme.StoryList" parent="Theme.AppCompat">
        <item name="android:background">@color/colorSecondaryLight</item>
    </style>

    <style name="AppTheme.StoryList.title" parent="AppTheme.StoryList">
        <item name="android:textColor">@color/colorPrimaryText</item>
        <item name="android:textStyle">normal|bold</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="AppTheme.StoryList.subtitle" parent="AppTheme.StoryList">
        <item name="android:textColor">@color/colorPrimaryText</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="AppTheme.StoryList.textButton" parent="AppTheme.StoryList">
        <item name="android:textColor">@color/colorPrimaryText</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:padding">24sp</item>
    </style>

    <!-- Storytelling App : StoryView -->
    <style name="AppTheme.StoryView" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="AppTheme.StoryView.Cover.title" parent="AppTheme.StoryView">
        <item name="android:textColor">@color/storyViewCoverFg</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">34sp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="AppTheme.StoryView.title" parent="AppTheme.StoryView">
        <item name="android:textColor">@color/storyText</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">34sp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="AppTheme.StoryView.text" parent="AppTheme.StoryView">
        <item name="android:textColor">@color/storyText</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <!-- Storytelling App : ReflectionStart -->
    <style name="AppTheme.ReflectionStart" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="AppTheme.ReflectionStart.text" parent="AppTheme.ReflectionView">
        <item name="android:textColor">@color/colorPrimaryText</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">28sp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="AppTheme.ReflectionStart.subtext" parent="AppTheme.ReflectionView">
        <item name="android:textColor">@color/colorPrimaryText</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">24sp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textAlignment">center</item>
    </style>

    <!-- Storytelling App : ReflectionView -->
    <style name="AppTheme.ReflectionView" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="AppTheme.ReflectionView.info" parent="AppTheme.ReflectionView">
        <item name="android:textColor">@color/greyPrimaryDark</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="AppTheme.ReflectionView.text" parent="AppTheme.ReflectionView">
        <item name="android:textColor">@color/storyReflectionText</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">38sp</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="AppTheme.ReflectionView.subtext" parent="AppTheme.ReflectionView">
        <item name="android:textColor">@color/greyPrimaryDark</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">22sp</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <!-- Storytelling App : StatementView -->
    <style name="AppTheme.StatementView" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="AppTheme.StatementView.text" parent="AppTheme.StatementView">
        <item name="android:textColor">@color/colorPrimaryText</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">36sp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="AppTheme.StatementView.subtext" parent="AppTheme.StatementView">
        <item name="android:textColor">@color/colorPrimaryText</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textAlignment">center</item>
    </style>

    <!-- Storytelling App : ChallengeSelectionView -->
    <style name="AppTheme.ChallengeSelectionView" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="AppTheme.ChallengeSelectionView.superbig" parent="AppTheme">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">42sp</item>
    </style>

    <style name="AppTheme.ChallengeSelectionView.heading" parent="AppTheme">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">32sp</item>
    </style>

    <style name="AppTheme.ChallengeSelectionView.subheading" parent="AppTheme">
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textSize">24sp</item>
    </style>

    <!-- Storytelling App : StatementView -->
    <style name="AppTheme.MemoView" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="AppTheme.MemoView.text" parent="AppTheme.StatementView">
        <item name="android:textColor">@color/colorPrimaryText</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">28sp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="AppTheme.MemoView.subtext" parent="AppTheme.StatementView">
        <item name="android:textColor">@color/colorPrimaryText</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textAlignment">center</item>
    </style>

    <!-- Storytelling App : MonitoringView -->
    <style name="AppTheme.MonitoringView" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="FullscreenTheme" parent="AppTheme">
        <item name="android:actionBarStyle">@style/FullscreenActionBarStyle</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
        <item name="metaButtonBarStyle">?android:attr/buttonBarStyle</item>
        <item name="metaButtonBarButtonStyle">?android:attr/buttonBarButtonStyle</item>
    </style>

    <style name="FullscreenActionBarStyle" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/black_overlay</item>
    </style>

    <!-- Storytelling App : Preferences -->
    <style name="AppTheme.Preferences" parent="AppTheme">
        <item name="android:windowActionBar">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimary</item>
    </style>

    <!-- Storytelling App : ActivityView -->


    <!-- Storytelling App: Dialog -->
    <style name="AppTheme.Dialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
        <item name="buttonBarNeutralButtonStyle">@style/NeutralButtonStyle</item>
    </style>

    <style name="NegativeButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="PositiveButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="NeutralButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

</resources>
