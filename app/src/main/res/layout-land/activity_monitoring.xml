    android:id="@+id/layoutMonitoringView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:orientation="horizontal"
    tools:context="edu.neu.ccs.wellness.storytelling.MonitoringActivity">

    <edu.neu.ccs.wellness.storytelling.monitoringview.MonitoringView
        android:id="@+id/monitoringView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        custom:showText="true"
        custom:num_days="seven"/>

</LinearLayout>
